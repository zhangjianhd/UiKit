<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#f2f3f6"
    android:layout_height="match_parent">

    <com.zhangjian.uikit.longimage.LongImageView
        android:id="@+id/longImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="60dp"
        app:layout_constraintDimensionRatio="3:5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="长图，可滑动查看全部"
        android:textColor="#ffffff"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/longImage"
        app:layout_constraintLeft_toLeftOf="@+id/longImage"
        app:layout_constraintRight_toRightOf="@+id/longImage" />

</androidx.constraintlayout.widget.ConstraintLayout>